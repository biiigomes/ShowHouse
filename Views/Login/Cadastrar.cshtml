@model mvc_desafio_master.DTO.LoginDTO
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Login.css">
<div class="sidenav">
         <div class="login-main-text">
            <h2>Bem-vindo à página de cadastro do site Melodia da Vida
               <br>
               <br>
         </div>
      </div>
     <form class="form-horizontal" asp-controller="Cadastrar" asp-action="Salvar" method="POST">     
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
                <div class="form-group">
                     <label asp-for="Nome">Nome</label>
                     <input type="text" asp-for="Nome" name="nome" class="form-control" placeholder="Tony Stark">
                     <span asp-validation-for="Nome"></span>
                     </div>
                     <div class="form-group">
                     <label asp-for="UserName">Nome de usuário</label>
                     <input type="text" asp-for="UserName" class="form-control" placeholder="HomemFerro">
                     <span asp-validation-for="UserName"></span>
                     </div>
                     <div class="form-group">
                     <label asp-for="Senha">Senha</label>
                     <input type="password" asp-for="Senha"class="form-control" placeholder="Playboyzinho">
                     <span asp-validation-for="Senha"></span>
                     </div>
                     <div class="custom-control custom-checkbox mb-3">
                  </div>
                  <button class="btn btn-black">Salvar</button>
            </div>
         </div>
      </div>
   </form>
