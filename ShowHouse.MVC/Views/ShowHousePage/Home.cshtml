@model IEnumerable<ShowHouse.Application.DTO.EventDTO>
    
@{
    Layout = "_LayoutAdmin";
}
<div class="container">
    <table class="table table-striped">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        R$ @Html.DisplayFor(modelItem => item.TicketValue)
                    </td>
                    <td>
                        <img src="~/image/@item.Style.ImagePath", alt="@item.Style.ImagePath", width="300", height="300">  
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
